<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="articles-container">
      <% if (posts.length) { %>
        <% posts.forEach(({ id, title, date, text, author }) => { %>
          <article>
            <h2>
              <a href="/posts/<%= id %>"><%= title %></a>
            </h2>
            <p><%= text %></p>
            <div class="info">
              <span><%= date %></span>
              <span><%= author %></span>
            </div>
          </article>
        <% }) %>
      <% } %>
    </div> 
</body>
</html>